<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <br>
            <h3>{{title}}</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-8 col-lg-8">
            <legend>{{articleDate}} <a href="/news/view" style="font-size: 14px;" class="pull-right">Go Back</a></legend>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-8 col-lg-8">
            <h2>{{heading}}</h2>
            <img id="article-img" src="{{imgUrl}}" alt="{{heading}}" width="100%" height="auto" />
        </div>

        <div class="col-xs-12 col-md-4 col-lg-4">
            <h2 class="text-primary">Post a comment </h2>
            <form id="form-comment" method="POST" action="/news/comment">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" name="post" id="post" placeholder="Please leave an insightful comment"></textarea>
                    <input type="hidden" id="articleRef" name="articleRef" value="{{newsId}}" />
                </div>
                <div class="form-group">
                    <button type="submit" data-id="post" class="btn btn-primary">Post</button>
                </div>
            </form>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-xs-12 col-md-8 col-lg-8">
            <p>{{description}}</p>
            <p>Full Article: <a href="{{articleLink}}" target="_blank">{{articleLink}}</a></p>
            <br>
            <legend></legend>
            <h3>Comments</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-8 col-lg-6">
            <div id="comment-blocks">
              {{#if commentBlocks}}
                {{{commentBlocks}}}
              {{else}}
                <p> There are no comments for this article. </p>
              {{/if}}
            </div> <!-- /.comment-blocks -->
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-8 col-lg-8">

        </div>  <!-- /.col -->
    </div>  <!-- /.row -->
</div> <!-- /.container -->