<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <br>
            <div class="panel panel-primary">
                <div class="panel-heading"> Sign Up For ScrapeInator! </div>
                <div class="panel-body">

                    {{#if errors}}
                        {{#each errors}}
                            <p class="text-danger">{{this}}</p>
                        {{/each}}
                    {{/if}}

                    {{#if successMsg}}
                        <p class="text-success">{{successMsg}}</p>
                        <p class="text-success">Please <a href="/">proceed</a> to Login page.</p>
                    {{/if}}

                    <form id="signup-form" method="POST" action="/users/add">
                        <div class="form-group">
                            <label for="firstName" class="control-label">First Name</label>
                            <input type="text" class="form-control" name="firstName" id="firstName" value="{{firstName}}" />
                        </div>

                        <div class="form-group">
                            <label for="lastName" class="control-label">Last Name</label>
                            <input type="text" class="form-control" name="lastName" id="lastName" value="{{lastName}}" />
                        </div>

                        <div class="form-group">
                            <label for="userName" class="control-label">User Name</label>
                            <input type="text" class="form-control" name="userName" id="userName" value="{{userName}}" />
                        </div>

                        <div class="form-group">
                            <label for="email" class="control-label">Email Address</label>
                            <input type="text" class="form-control" name="email" id="email" value="{{email}}" />
                        </div>

                        <div class="form-group">
                            <label for="password" class="control-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" value="{{password}}" />
                        </div>
                        <legend></legend>
                        <button type="submit" class="btn btn-primary"> Sign Up </button>
                    </form>
                </div> <!-- /.panel-body -->
            </div> <!-- /.panel-primary -->
        </div> <!-- ./col -->
    </div> <!-- ./row -->
</div> <!-- ./container -->