<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <br>
            <legend> Sign Up For ScrapeInator! </legend>

            {{#if errors}}
                {{#each errors}}
                    <p class="text-danger">{{this}}</p>
                {{/each}}
            {{/if}}

            {{#if successMsg}}
                <p class="text-success">{{successMsg}}</p>
                <p class="text-success">Please <a href="/">proceed</a> to Login page.</p>
            {{/if}}

            <form class="form-horizontal" id="signup-form" method="POST" action="/users/add">
                <div class="form-group row">
                    <label for="firstName" class="col-xs-2 control-label">First Name</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control" name="firstName" id="firstName" value="{{firstName}}" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="lastName" class="col-xs-2 control-label">Last Name</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control" name="lastName" id="lastName" value="{{lastName}}" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="userName" class="col-xs-2 control-label">User Name</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control" name="userName" id="userName" value="{{userName}}" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="email" class="col-xs-2 control-label">Email Address</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control" name="email" id="email" value="{{email}}" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-xs-2 control-label">Password</label>
                    <div class="col-xs-10">
                        <input type="password" class="form-control" name="password" id="password" value="{{password}}" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-12">
                        <legend></legend>
                        <button type="submit" class="btn btn-success"> Sign Up </button>
                    </div>
                </div>
            </form>
        </div> <!-- ./col -->
    </div> <!-- ./row -->
</div> <!-- ./container -->